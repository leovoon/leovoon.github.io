---
import DefaultLayout from '../layouts/DefaultLayout.astro'
import { projectList } from '../data/projectList'
import Card from '../components/Card.astro'
import cute from '../assets/img/cute.gif'
---

<DefaultLayout title="">
  <section class="margin-48">
    <div class="container">
      <h1>Hello I'm <em>Leo</em>.üßëüèª‚Äçüíª</h1> A web developer based in <a
        href="https://goo.gl/maps/GGChnCetCuyfK7Lj6">Sarawak</a
      >.<br />
    </div>
  </section>
  <section class="padding-48 color-primary">
    <div class="container">
      <h3 class="margin-16 bottom">My Projects</h3>
    </div>
    <div class="container" data-auto-grid="3">
      {
        projectList.map((project) => (
          <Card
            title={project.name}
            description={project.description}
            githubLink={project.githubLink}
            liveLink={project.liveLink}
          />
        ))
      }
    </div>
  </section>
  <section class="margin-64">
    <div class="container">
      <div class="grid">
        <div class="small-12 medium-8">
          <h3 class="margin-16 bottom">About me</h3>
          <p class="about-me">
            Besides coding, I enjoy food, listen to music and look at cute
            things. <img
              src={cute}
              class="cute"
              width="50"
              height="50"
              alt="cute thing"
            />
          </p>
        </div>
      </div>
    </div>
  </section>
</DefaultLayout>

<style>
  .about-me {
    position: relative;
    max-width: max-content;
  }
  .cute {
    position: absolute;
    right: 0;
    bottom: 0;
    display: inline-block;
    border-radius: 50%;
    transform: translateX(150%);
  }
  @media (max-width: 604px) {
    .about-me {
      max-width: 100%;
    }
    .cute {
      transform: translate(-55%, 100%);
    }
  }

  @media (max-width: 375px) {
    .about-me {
      max-width: 100vw;
    }
  }
</style>
