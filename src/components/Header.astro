---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE, SITE_AUTHOR } from "../consts";
import DarkModeToggle from "./DarkModeToggle.astro";
import HeaderInteractive from "../components/svelte/HeaderInteractive.svelte";
import mapleLogo from "../assets/maple.png";
import ResponsiveImage from "./ResponsiveImage.astro";
const rightNavItems = [
  {
    href: "/",
    name: "Home",
  },
  {
    href: "/blog",
    name: "Blog",
  },
];
---

<HeaderInteractive client:visible>
  <a href="/">
    <h2 title={SITE_AUTHOR} class="inline-flex items-center group">
      <span>
        {SITE_TITLE}
      </span>
      <div class="w-4 h-4">
        <ResponsiveImage
          alt="a maple leave logo"
          src={mapleLogo}
          format="avif"
          sizes={[50, 300, 500]}
          class="rotate-45 pointer-events-none aspect-square"
        />
      </div>
    </h2>
    <nav class="flex items-center justify-end space-x-2 w-full text-right">
      {
        rightNavItems.map((item) => (
          <HeaderLink href={item.href} id={item.name}>
            {item.name}
          </HeaderLink>
        ))
      }
      <DarkModeToggle />
    </nav>
  </a>
</HeaderInteractive>
