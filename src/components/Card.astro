---
import githubIcon from '../assets/img/github.svg'
const { title, description, githubLink, liveLink, image } = Astro.props
---

<div
  class="card text-neutral-100 bg-neutral-900 space-32 radius-large elevation-500"
  data-animation="fade-in"
>
  <picture>
    <source srcset={image.webp} type="image/webp" />
    <img
      src={image.jpg}
      alt="project image"
      loading="lazy"
      width="auto"
      height="auto"
    />
  </picture>

  <h3>{title}</h3>
  <p class="margin-16">
    {description}
  </p>
  <div class="align-row-vertical">
    <a rel="external" target="_blank" href={`${githubLink}`} class="button">
      <img src={githubIcon} width={18} height={18} alt="github" />
    </a>
    <button class="button color-secondary">Demo</button>
  </div>
</div>
<style>
  .card {
    position: relative;
  }

  .card:hover picture {
    opacity: 0.35;
  }

  picture {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    opacity: 0.2;
    transition: opacity 0.6s ease;
  }
  img {
    display: block;
    width: 100%;
    object-fit: cover;
    object-position: top right;
    aspect-ratio: 1;
  }
</style>
